<Page
    navigatingTo="onNavigatingTo"
    xmlns="http://schemas.nativescript.org/tns.xsd" actionBarHidden="true" class="setup-page">
    
    <GridLayout backgroundColor="#FFEB3B" rows="*, auto, 10, auto, 30, auto, 10, auto, 10, auto, *" columns="30, *, 30">
        <Image src="~/assets/icon.png" width="100" row="1" col="1" />
        
        <StackLayout row="3"  col="1">
            <Label class="hand-sutt-bold h1" color="#424242" text="Buku Kasbon" textWrap="true" textAlignment="center" />
            <Label class="hand-sutt h2" color="#424242" text="Pencatatan Kasbon yang Mudah dan Efisien" textWrap="true" textAlignment="center" />
        </StackLayout>

        <StackLayout row="5" col="1">
            <TextField class="text-input" text="{{ shop_name }}" hint="Nama toko" />
        </StackLayout>

        <StackLayout row="9" col="1">
            <Button text="Simpan &amp; Mulai Sekarang" class="hand-sutt-bold h2 btn-grey-800" tap="startNow" visibility="{{ !isLoading ? 'visible' : 'collapsed' }}" />
            <ActivityIndicator color="#424242" height="40" width="40" busy="{{ isLoading }}" />
        </StackLayout>
    </GridLayout>
    
</Page>
